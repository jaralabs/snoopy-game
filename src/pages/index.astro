---
import Game from "../components/game";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Snoopy Gift Game</title>
  </head>
  <body class="h-[100dvh] overflow-hidden bg-slate-950 text-slate-100">
    <main class="safe-shell mx-auto flex h-[100dvh] w-full items-center justify-center">
      <section class="h-full w-full overflow-hidden rounded-xl border border-slate-800 bg-black shadow-2xl shadow-black/60 sm:h-auto sm:max-w-5xl sm:rounded-2xl">
        <div class="h-full w-full sm:aspect-video">
          <Game client:load />
        </div>
      </section>
    </main>
  </body>
</html>
